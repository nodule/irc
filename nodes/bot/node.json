{
  "name": "bot",
  "ns": "irc",
  "description": "IRC Bot",
  "phrases": {
    "active": "Starting IRC Bot"
  },
  "require": {
    "irc": "0.x.x"
  },
  "ports": {
    "input": {
      "name": {
        "title": "Bot Name",
        "type": "string",
        "default": "xBot"
      },
      "server": {
        "title": "IRC Server",
        "type": "string",
        "required": true
      },
      "channels": {
        "title": "Channels",
        "type": "array",
        "required": true
      },
      "debug": {
        "title": "String Parts",
        "type": "boolean",
        "default": false
      }
    },
    "output": {
      "error": {
        "title": "Error",
        "type": "any"
      },
      "bot": {
        "title": "Bot",
        "type": "Client"
      }
    }
  }
}
